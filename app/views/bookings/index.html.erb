 <div class="container d-flex justify-content-center align-items-center">
  <div class="row">
    <div class="col-sm" style="margin: 32px; background-color: #61eb34">
      <h1>Confirmed</h1>
      <% @bookings.each do |booking| %>
      <div class="card-trip m-3 d-flex flex-column justify-content-start">
        <img src=<%= booking.grandparent.image %> />
        <div class="card-trip-infos">
        <div>
          <h2><strong><%= booking.title %></strong></h2> <br>
          <p><strong>Booking Date: </strong><%= booking.date.to_s[0..-8]%></p> <br>
          <p><strong>Booking Description: </strong><%= booking.description %></p>
          <br>
          <button type="button" class="btn btn-primary">View Booking</button>
        </div>
        </div>
        <div class="container d-flex justify-content-between align-items-center mb-3">
        <p></p>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-sm" style="margin: 32px; background-color: #eb4634">
      <h1>Unconfirmed</h1>
      <% @bookings.each do |booking| %>
      <div class="card-trip m-3 d-flex flex-column justify-content-start">
        <img src=<%= booking.grandparent.image %> />
        <div class="card-trip-infos">
        <div>
          <h2><strong><%= booking.title %></strong></h2> <br>
          <p><strong>Booking Date: </strong><%= booking.date.to_s[0..-8]%></p> <br>
          <p><strong>Booking Description: </strong><%= booking.description %></p>
          <br>
          <button type="button" class="btn btn-success">Confirm Booking</button>
        </div>
        </div>
        <div class="container d-flex justify-content-between align-items-center mb-3">
        <p></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
