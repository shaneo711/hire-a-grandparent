<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h1 class="mx-auto my-3" style="text-align: center;">New Booking with <%= @grandparent.name %></h1>
      <img src="<%= @grandparent.image %>" alt="" class="my-3">
      <%= simple_form_for [@grandparent, @booking] do |f| %>
        <%= f.input :date %>
        <%= f.input :title, label: "Booking Title" %>
        <%= f.input :description %>
        <%= f.button :submit, "Book now", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
