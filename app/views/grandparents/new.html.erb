<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6">
      <h1 class="mx-auto my-3" style="text-align: center;">New Grandparent Profile</h1>
        <%= simple_form_for @grandparent do |f| %>
          <%= f.input :name %>
          <%= f.input :description, label: 'About Me' %>
          <%= f.input :interest, label: 'Interests' %>
          <h4>Availability:</h4>
          <div class="d-flex flex-column">
            <%= f.input :monday %>
            <%= f.input :tuesday %>
            <%= f.input :wednesday %>
            <%= f.input :thursday %>
            <%= f.input :friday %>
            <%= f.input :saturday %>
            <%= f.input :sunday %>
          </div>
          <%= f.input :location,
          input_html: { data: { geocoder_target: "location" }, class: 'd-none' },
          wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } }
          %>
          <%= f.input :image, label: 'Link to Profile Image' %>
          <%= f.submit "Create Profile", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>
