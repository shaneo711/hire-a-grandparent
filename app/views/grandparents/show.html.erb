<div class="container my-3 shadow">
  <div class="row d-flex justify-content-around">
    <div class="col-6">
        <img src=<%= @grandparent.image %> style="width: 100%" alt="Profile image">
        <h1 style="text-align: center;" class="mb-3"><%= @grandparent.name %>'s Profile</h1>
    </div>


    <div class="col-6">
      <div class="text">
          <h2>About Me</h2>
          <p><%= @grandparent.description %></p>
          <h2>Interests</h2>
          <p><%= @grandparent.interest %></p>
          <h2>Location</h2>
          <p><%= @grandparent.location.capitalize %></p>
          <h2>Availability</h2>
          <div class="mb-3 d-flex justify-content-start">
              <div class="mx-2">
              <h4 class="m-0">M</h4>
              <%= @grandparent.monday ? '✅' : '❌' %>
          </div>
          <div class="mx-2">
            <h4 class="m-0">T</h4>
            <%= @grandparent.tuesday ? '✅' : '❌' %>
          </div>
          <div class="mx-2">
            <h4 class="m-0">W</h4>
            <%= @grandparent.wednesday ? '✅' : '❌' %>
          </div>
          <div class="mx-2">
            <h4 class="m-0">T</h4>
            <%= @grandparent.thursday ? '✅' : '❌' %>
          </div>
          <div class="mx-2">
            <h4 class="m-0">F</h4>
            <%= @grandparent.friday ? '✅' : '❌' %>
          </div>
          <div class="mx-2">
            <h4 class="m-0">S</h4>
            <%= @grandparent.saturday ? '✅' : '❌' %>
          </div>
          <div class="mx-2">
            <h4 class="m-0">S</h4>
            <%= @grandparent.sunday ? '✅' : '❌' %>
          </div>

        </div>
        <% unless policy(@grandparent).edit? %>
          <%= link_to "Book", new_grandparent_booking_path(@grandparent), class: "btn btn-outline-success mb-3" %>
          <% end %>
        <div>
          <% if policy(@grandparent).edit? %>
            <%= link_to "Edit Profile", edit_grandparent_path(@grandparent), class: "btn btn-outline-primary" %>
          <% end %>
          <% if policy(@grandparent).destroy? %>
            <%= link_to "Delete Profile", grandparent_path(@grandparent), method: :delete, class: "btn-outline-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
