<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "grandmother.jpg" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto d-flex align-items-center">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Grandparents", grandparents_path, class: "btn btn-primary mx-1 rounded-pill" %>
          </li>
          <li class="nav-item">
            <%= link_to "Dashboard", user_root_path, class: "btn btn-primary mx-1 rounded-pill" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': true %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <b class="dropdown-item">User: <%= current_user.first_name %></b>
              <%= link_to "Add Grandparent", new_grandparent_path, class: "dropdown-item" %>
              <%= link_to "My Bookings", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item" type="button">
            <%= link_to "Become a Grandparent", new_grandparent_path, class: "btn btn-primary mx-1 rounded-pill" %>
          </li>

          <li class="nav-item" type="button">
            <%= link_to "FAQ", "#", class: "btn btn-primary mx-1 rounded-pill" %>
          </li>

          <li class="nav-item" type="button">
            <%= link_to "Log In", new_user_session_path, class: "btn btn-primary mx-1 rounded-pill" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
